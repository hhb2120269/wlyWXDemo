@import '../game/gameitem/game.wxss';

.art {
  background-color: #fff;
  border: 1rpx solid #f6f6f6;
  border-radius: 8rpx;
  margin: 20rpx;
}

.art .top {
  background-color: #36b9af;
  border-top-left-radius: 8rpx;
  border-top-right-radius: 8rpx;
  display: flex;
  align-items: center;
  flex-direction: row;
  flex-wrap: nowrap;
  padding: 10rpx 20rpx;
  color: #fff;
  font-size: 26rpx;
}

.art .top image {
  width: 40rpx;
  height: 40rpx;
}

.art .top .nickname {
  font-size: 30rpx;
  font-weight: bold;
  margin-left: 10rpx;
  flex-shrink: 1;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.art .top .issue_time {
  margin-left: 10rpx;
  flex: 1;
}

.art .top .typemsg {
  flex-shrink: 0;
}

.games {
  padding-left: 14rpx;
}

.free_content {
  padding: 16rpx;
  color: #666;
  font-size: 32rpx;
}

.free_content text {
  line-height: 1.3rem;
  word-break: break-word;
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
}
