<!--logs.wxml-->
<view class='container list-content'>
  <view style='background:blue' class="list-inputview">
    <image class='input-avart'></image>
    <input class='list-input' type='text' confirm-type='search' placeholder-style="font-size:16px;color:lightred" placeholder="占位符字体是红色的" auto-focus />
    <button bindtap="chooseimage" class='input-btn'>拍照</button>
  </view>
  
  <image src="{{tempFilePaths }}" mode="aspecFill" style="width: 100%; height: 450rpx" />
  <view class="list-text">
    <text class="list-text">{{text}}</text>
  </view>
</view>